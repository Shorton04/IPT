INITIALIZATION.

  DATA: lv_curr_ts TYPE timestampl,
        lv_from_ts TYPE timestampl,
        lv_date    TYPE sy-datum,
        lv_time    TYPE sy-uzeit.

  " Get current timestamp
  GET TIME STAMP FIELD lv_curr_ts.

  " Subtract 10 minutes (600 seconds)
  lv_from_ts = lv_curr_ts - 600.

  " Convert back to date/time for default selection screen values
  CONVERT TIME STAMP lv_from_ts TIME ZONE sy-zonlo INTO DATE lv_date TIME lv_time.

  " Set default for selection fields
  so_date-low = lv_date.
  so_time-low = lv_time.

  " Also set 'to' values as current time
  so_date-high = lv_date.
  so_time-high = sy-uzeit.

  " Apply defaults
  REFRESH so_date.
  REFRESH so_time.
  APPEND so_date.
  APPEND so_time.