*----------------------------------------------------------------------*
***INCLUDE LZLONZA_ALV_POPUPO01.
*----------------------------------------------------------------------*
*&---------------------------------------------------------------------*
*&      Module  STATUS_0100  OUTPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE status_0100 OUTPUT.
  SET PF-STATUS '100'.
  SET TITLEBAR '100' WITH gv_title_text.

ENDMODULE.                 " STATUS_0100  OUTPUT
*&---------------------------------------------------------------------*
*&      Module  SCREEN_MODIFY_0100  OUTPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE screen_modify_0100 OUTPUT.

  LOOP AT SCREEN.
    CASE screen-name.
      WHEN 'BUTTON1'.
        IF gv_button1_text IS INITIAL.
          screen-invisible = 1.
        ENDIF.
      WHEN 'BUTTON2'.
        IF gv_button2_text IS INITIAL.
          screen-invisible = 1.
        ENDIF.
      WHEN 'BUTTON3'.
        IF gv_button3_text IS INITIAL.
          screen-invisible = 1.
        ENDIF.
      WHEN 'BUTTON4'.
        IF gv_button4_text IS INITIAL.
          screen-invisible = 1.
        ENDIF.
      WHEN 'BUTTON5'.
        IF gv_button5_text IS INITIAL.
          screen-invisible = 1.
        ENDIF.
      WHEN OTHERS.
    ENDCASE.

    MODIFY SCREEN.
  ENDLOOP.

ENDMODULE.                 " SCREEN_MODIFY_0100  OUTPUT
*&---------------------------------------------------------------------*
*&      Module  LISTPROCESSING  OUTPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE listprocessing OUTPUT.
  LEAVE TO LIST-PROCESSING AND RETURN TO SCREEN 100.
  LOOP AT gt_value INTO gv_value.
    WRITE: / gv_value.
    NEW-LINE.
*    ULINE.
  ENDLOOP.
  SET CURSOR LINE 1.
  LEAVE SCREEN.
ENDMODULE.                 " LISTPROCESSING  OUTPUT
*&---------------------------------------------------------------------*
*&      Module  USER_COMMAND_0100  INPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE user_command_0100 INPUT.
  CLEAR: gv_action.
  CASE gv_ok_code.
    WHEN 'BUT1'.
      gv_action = 1.
      LEAVE TO SCREEN 0.
    WHEN 'BUT2'.
      gv_action = 2.
      LEAVE TO SCREEN 0.
    WHEN 'BUT3'.
      gv_action = 3.
      LEAVE TO SCREEN 0.
    WHEN 'BUT4'.
      gv_action = 4.
      LEAVE TO SCREEN 0.
    WHEN 'BUT5'.
      gv_action = 5.
      LEAVE TO SCREEN 0.
    WHEN OTHERS.
  ENDCASE.
ENDMODULE.                 " USER_COMMAND_0100  INPUT
