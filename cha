        " Append row only when calculated amount (betr1) is not zero
        IF betr1 <> 0.
          CLEAR gs_alv.
          gs_alv-ryear  = ryear-low.
          gs_alv-rbukrs = frkey-rbukrs.
          gs_alv-prctr  = frkey-prctr.
          gs_alv-fruni  = frkey-fruni.
          gs_alv-rmvct  = frkey-rmvct.
          gs_alv-racct  = frkey-racct.
          gs_alv-rassc  = frkey-rassc.
          gs_alv-pprctr = frkey-pprctr.
          " append the numeric amount we computed earlier
          gs_alv-betr1  = betr1.
          APPEND gs_alv TO gt_alv.
        ENDIF.


  " If no rows were collected, inform user and skip SALV
  IF gt_alv IS INITIAL.
    MESSAGE 'No data found for selection.' TYPE 'I'.
    RETURN.
  ENDIF.