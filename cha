REPORT zshow_fm_interface.

PARAMETERS p_func TYPE rs38l_fnam OBLIGATORY.

DATA: lt_params TYPE TABLE OF abap_func_parmbind,
      ls_param  LIKE LINE OF lt_params.

TRY.
    " Dynamically get all interface parameters
    CALL FUNCTION 'RFC_GET_FUNCTION_INTERFACE_DEFINITION'
      EXPORTING
        funcname = p_func
      TABLES
        parameters = lt_params.

    ULINE.
    WRITE: / 'Parameter', 25 'Direction', 40 'Type', 60 'Length'.
    ULINE.

    LOOP AT lt_params INTO ls_param.
      WRITE: / ls_param-name,
               25 ls_param-direction,
               40 ls_param-typename,
               60 ls_param-length.
    ENDLOOP.

  CATCH cx_root INTO DATA(lx).
    WRITE: / 'Error reading interface:', lx->get_text( ).
ENDTRY.