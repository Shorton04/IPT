INITIALIZATION.

  DATA: lv_curr_ts TYPE timestampl,
        lv_from_ts TYPE timestampl.

  " Get current UTC timestamp
  GET TIME STAMP FIELD lv_curr_ts.

  " Subtract exactly 600 seconds (10 minutes)
  CALL FUNCTION 'TIMESTAMP_DURATION_SUBTRACT'
    EXPORTING
      timestamp = lv_curr_ts
      seconds   = 600
    IMPORTING
      result    = lv_from_ts.

  " Convert to user time zone for display
  CONVERT TIME STAMP lv_from_ts TIME ZONE sy-zonlo
          INTO DATE so_date-low TIME so_time-low.
  CONVERT TIME STAMP lv_curr_ts TIME ZONE sy-zonlo
          INTO DATE so_date-high TIME so_time-high.

  " Assign selection range
  so_date-sign   = 'I'.
  so_date-option = 'BT'.
  APPEND so_date.

  so_time-sign   = 'I'.
  so_time-option = 'BT'.
  APPEND so_time.