REPORT zshow_fm_interface.

PARAMETERS p_func TYPE rs38l_fnam OBLIGATORY.

DATA: lt_interface TYPE STANDARD TABLE OF rfc_fint,
      ls_interface LIKE LINE OF lt_interface.

CALL FUNCTION 'RFC_GET_FUNCTION_INTERFACE'
  EXPORTING
    funcname = p_func
  TABLES
    interface = lt_interface
  EXCEPTIONS
    system_error        = 1
    communication_error = 2
    OTHERS              = 3.

IF sy-subrc <> 0.
  WRITE: / 'Error reading interface for', p_func.
  RETURN.
ENDIF.

ULINE.
WRITE: / 'Parameter', 25 'Direction', 40 'TypeName', 70 'Length'.
ULINE.

LOOP AT lt_interface INTO ls_interface.
  WRITE: / ls_interface-parameter,
          25 ls_interface-direction,
          40 ls_interface-typename,
          70 ls_interface-length.
ENDLOOP.