REPORT zshow_fm_interface.

PARAMETERS p_func TYPE rs38l_fnam OBLIGATORY.

DATA: lt_params TYPE TABLE OF fupararef,
      ls_param  TYPE fupararef.

SELECT * FROM fupararef
  INTO TABLE lt_params
  WHERE funcname = p_func
  ORDER BY pposition.

IF sy-subrc <> 0.
  WRITE: / 'Function module not found:', p_func.
  EXIT.
ENDIF.

ULINE.
WRITE: / 'Parameter', 25 'Direction', 40 'Type / Structure', 70 'Optional'.
ULINE.

LOOP AT lt_params INTO ls_param.
  DATA(lv_dir) = SWITCH string(
    ls_param-class
      WHEN 'I' THEN 'IMPORT'
      WHEN 'E' THEN 'EXPORT'
      WHEN 'C' THEN 'CHANGING'
      WHEN 'T' THEN 'TABLES'
      ELSE ls_param-class
  ).

  WRITE: / ls_param-parameter,
           25 lv_dir,
           40 ls_param-structure,
           70 ls_param-optional.
ENDLOOP.

ULINE.
WRITE: / 'Total parameters:', sy-tabix.